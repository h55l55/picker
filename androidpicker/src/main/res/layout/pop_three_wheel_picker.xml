<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AF000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title_background"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_rect_c4_1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/global_bar_height"
            android:layout_marginLeft="25dp"
            android:gravity="center_vertical"
            android:text="请选择地区"
            android:textColor="@color/c3_2"
            android:textSize="@dimen/t3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_divider_width"
            android:background="@color/c4_4" />

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.hqyxjy.picker.wheel.WheelView
                android:id="@+id/first_wheel_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </com.hqyxjy.picker.wheel.WheelView>

            <com.hqyxjy.picker.wheel.WheelView
                android:id="@+id/second_wheel_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </com.hqyxjy.picker.wheel.WheelView>

            <com.hqyxjy.picker.wheel.WheelView
                android:id="@+id/third_wheel_view"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </com.hqyxjy.picker.wheel.WheelView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/global_divider_width"
            android:background="@color/c4_4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/c3_5"
                android:textSize="@dimen/t4" />

            <View
                android:layout_width="@dimen/global_divider_width"
                android:layout_height="match_parent"
                android:background="@color/c4_4" />

            <TextView
                android:id="@+id/tv_confirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/c1_1"
                android:textSize="@dimen/t4" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>